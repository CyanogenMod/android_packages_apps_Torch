<resources>

    <style name="AppTheme" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_color</item>
    </style>

    <style name="AppTheme.Translucent" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="ActionBarTheme" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/bg_color</item>
        <item name="android:icon">@drawable/ic_actionbar</item>
    </style>

</resources>